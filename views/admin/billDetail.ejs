<%-include("../partials/header.ejs") %>
<%-include("../partials/admin/navbar.ejs") %>
<%-include("../partials/admin/sidebar.ejs") %>

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Bill Details</h1>

  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h1 class="card-title">
              <%=resident.name%>
            </h1>

            <div class="pagetitle">
              <div class="card-body">
                 <% if (payment && bill.isPayed==false){ %>
                 <div class="rightbtn">
                  <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#basicModal">
                    Verify
                  </button>
                  <div class="modal fade" id="basicModal" tabindex="-1">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Confirmation</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          Are you sure to verify this payment?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <form action="/admin/bills/<%=bill._id%>/verify" method="post">
                            <button type="submit" class="btn btn-primary">Confirm</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% } %>

                </div>
              </div>
          
              <h5>
                <%=resident.cnic  %>
              </h5>
             <%=resident.address%>
              </h5>
              
            </div>
          </div>
        </div>
        </div>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Old Units: <%=bill.oldUnits%></h5>
            <h5 class="card-title">Current Units: <%=bill.currentUnits%></h5>
          </div>
        </div>




      </div>


      <div class="col-lg-6">

        <div class="card">
          <div class="card-body">
         
           
   
            <h5 class="card-title">Payment Details</h5>
<hr>
            <div class="pagetitle">

              <form action="/admin/bills/verify" method="post" class="row g-3 needs-validation" novalidate>

                <div class="col-12">
                    <h3>TID:<%= payment.tid%></h3>
                
                      <h3>Bank:   <%= payment.bank%></h3>
                    
                      <h3>Date:  <%= new Date(payment.date).toLocaleDateString() %></h3>
                     
          
                
              </form>

            </div><!-- End Breadcrumbs with a page title -->

          </div>
        </div>


      </div>

    </div>
    </div>
  </section>

</main><!-- End #main -->




<%-include("../partials/footer.ejs") %>