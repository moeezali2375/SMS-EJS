<%-include("../partials/header.ejs") %>
<%-include("../partials/admin/navbar.ejs") %>
<%-include("../partials/admin/sidebar.ejs") %>



<main id="main" class="main">

  <div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
        <li class="breadcrumb-item active">Dashboard</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">

      <!-- Left side columns -->
      <div class="col-lg-12">
        <div class="row">


          <div class="col-xxl-4 col-md-8">
            <div class="card  info-card sales-card">


              <div class="card-body">
                <h5 class="card-title">Residents

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-people"></i>
                    </div>
                    <div class="ps-3">
                      <h6><%=residents.length %></h6>

                    </div>
                  </div>
              </div>

            </div>
          </div><!-- End -->


          <div class="col-xxl-4 col-md-8">
            <a href="/admin/residents/verified">
              <div class="card hcard info-card revenue-card">



                <div class="card-body">
                  <h5 class="card-title">Verified Residents

                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-people-fill"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%=verified_residents.length  %></h6>

                      </div>
                    </div>
                </div>

              </div>
            </a>
          </div><!-- End  -->


          <div class="col-xxl-4 col-xl-12">
            <a href="/admin/residents/unverified">
              <div class="card hcard info-card customers-card">


                <div class="card-body">
                  <h5 class="card-title">Unverified Residents


                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-people"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%=unverified_residents.length %></h6>


                      </div>
                    </div>

                </div>
              </div>
            </a>
          </div><!-- End  -->



          <div class="col-xxl-4 col-md-6">
            <a href="/admin/complaints/resolved">
              <div class="card hcard info-card sales-card">


                <div class="card-body">
                  <h5 class="card-title">Resolved Complaints

                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-archive-fill"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%=resolved_complaints.length  %></h6>


                      </div>
                    </div>
                </div>

              </div>
            </a>
          </div><!-- End  -->


          <div class="col-xxl-4 col-md-6">
            <a href="/admin/complaints/unresolved">
              <div class="card hcard info-card revenue-card">


                <div class="card-body">
                  <h5 class="card-title">Unresolved Complaints
                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-archive"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%=unresolved_complaints.length  %></h6>


                      </div>
                    </div>
                </div>

              </div>
            </a>
          </div><!-- End  -->


          <div class="col-xxl-4 col-xl-12">
            <a href="/admin/visitors/unverified">
              <div class="card hcard info-card customers-card">


                <div class="card-body">
                  <h5 class="card-title">Unverified Visitors

                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-people"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%=unverified_visitors.length  %></h6>


                      </div>
                    </div>

                </div>
              </div>
            </a>
          </div>

          <div class="col-xxl-4 col-md-6">
            <a href="/admin/bills/paid">
              <div class="card hcard info-card sales-card">



                <div class="card-body">
                  <h5 class="card-title">Paid Bills

                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-clipboard-check"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%=paid_bills.length  %></h6>


                      </div>
                    </div>
                </div>

              </div>
            </a>
          </div><!-- End -->


          <div class="col-xxl-4 col-md-6">
            <a href="/admin/bills/unpaid">
              <div class="card hcard info-card revenue-card">


                <div class="card-body">
                  <h5 class="card-title">Unpaid Bills
                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-clipboard-x"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%=unpaid_bills.length  %></h6>

                      </div>
                    </div>
                </div>

              </div>
            </a>
          </div><!-- End  -->


          <div class="col-xxl-4 col-xl-12">
            <a href="/admin/visitors/verified">
              <div class="card hcard info-card customers-card">



                <div class="card-body">
                  <h5 class="card-title">Verified Visitors

                    <div class="d-flex align-items-center">
                      <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-people"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%=verified_visitors.length  %></h6>


                      </div>
                    </div>

                </div>
              </div>
            </a>
          </div>


         
             
    </div>
  </section>

</main><!-- End #main -->
<style>
  /* Light mode styles */
  .hcard {
    background-color: #fff;
    color: #3498db;
    /* Blue font color */
    transition: background-color 0.3s, color 0.3s;
    /* Smooth transition effect */
  }

  /* Dark mode styles */
  body.dark-mode .card {
    background-color: #2c3e50;
    /* Dark background color */
    color: #ffd700;
    /* Yellow font color */
  }

  /* Hover effect */
  .hcard:hover {
    background-color: #8ed5e7;
    /* Lighter background color on hover */
    color: #2980b9;
    /* Darker font color on hover */
  }
</style>

