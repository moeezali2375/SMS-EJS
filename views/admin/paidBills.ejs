<%-include("../partials/header.ejs") %>
<%-include("../partials/admin/navbar.ejs") %>
<%-include("../partials/admin/sidebar.ejs") %>


<main id="main" class="main">

  <div class="pagetitle">
    <h1>Paid Bills</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
        <li class="breadcrumb-item">Bills</li>
        <li class="breadcrumb-item active">Paid</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row-lg-6">
      <div class="col-lg-12">





        
            <!-- Table with hoverable rows -->
          
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">CNIC</th>
                  <th scope="col">BillType</th>
                  <th scope="col">DueDate</th>
                  <th scope="col">Amount</th>
                  <th scope="col">Details</th>
                </tr>
              </thead>
              <tbody>
                
                <% for(let i=0;i<bills.length;i++){ %>
                <tr>
                  <th scope="row"><%=i+1 %></th>
                  <td><%= bills[i].resident.name %></td>
                  <td><%= bills[i].resident.cnic %></td>
                    <% if(bills[i].billType==0) {%>
                    <td>
                      Electricity
                    </td>
                    <%} else if(bills[i].billType==1){ %>
                    <td>
                      Gas
                    </td>
                    <% }else if(bills[i].billType==2){ %>
                    <td>
                      Water
                    </td>
                    <% } %>
                  <td><%= new Date(bills[i].dueDate).toLocaleDateString() %></td>
                  <td><%= bills[i].amount %></td>
                 
                  <td> <a href="/admin/bills/<%=bills[i]._id%>/details">
                    <button class="btn btn-primary btn-sm" name="userId" type="submit" ">Detail </button></td>
                </a>
                </tr>
                <% } %>

              </tbody>
            </table>
              <!-- End Table with hoverable rows -->

          </div>
        </div>



      </div>
    </div>

    </div>
    </div>
  </section>

</main>





<%-include("../partials/footer.ejs") %>