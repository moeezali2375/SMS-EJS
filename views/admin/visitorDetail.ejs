<%-include("../partials/header.ejs") %>
<%-include("../partials/admin/navbar.ejs") %>
<%-include("../partials/admin/sidebar.ejs") %>

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Visitor</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
        <li class="breadcrumb-item"><a href="/admin/visitors/verified">Visitor</a></li>
        <li class="breadcrumb-item active">Details</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h1 class="card-title">
              Registered By:
            </h1>
          

            <div class="pagetitle">
              <div class="card-body">
                <% if (visitor.isVerified===false){ %>
                <div class="rightbtn">
                  <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#basicModal">
                    Verify
                  </button>
                  <div class="modal fade" id="basicModal" tabindex="-1">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Confirmation</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          Are you sure you want to verify this visitor?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <form action="/admin/visitors/<%=visitor._id%>/verify" method="post">
                            <button type="submit" class="btn btn-primary">Confirm</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }else{;} %>
              <h3>
                <%=resident.name%>
              </h3>
              <h5>
                <%=resident.cnic  %>
              </h5>
          
              <h5>
                <%=resident.address%>
              </h5>
              <h5>
                Date: <%= new Date(visitor.date).toLocaleString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }) %>
              </h5>
            </div>
          </div>
        </div>
        </div>
        

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              Visitor:
            </h5>
            <h3>
              <%=visitor.name%>
            </h3>
            <h5 class="card-title">
              Reason:
            </h5>
            <h3>
              <%=visitor.reason%>
            </h3>
          </div>
      </div>
    </div>
  </section>
</main>





</div>
</div>
</div>

</div>
</div>

</div>
</div>
</section>

</main>


<%-include("../partials/footer.ejs") %>