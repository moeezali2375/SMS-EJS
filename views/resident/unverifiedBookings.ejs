<%-include("../partials/header.ejs") %>
<%-include("../partials/resident/resiNavbar.ejs") %>
<%-include("../partials/resident/resiSidebar.ejs") %>

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Unverified Bookings</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/resident/home">Home</a></li>
        <li class="breadcrumb-item">Bookings</li>
        <li class="breadcrumb-item active">Unverified</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row-lg-6">
      <div class="col-lg-12">





        <div class="card">
          <div class="card-body">


            <% if (message){ %>
              <div class="calert">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <i class="bi bi-exclamation-octagon me-1"></i>
                  <%= message %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              </div>
              <% } %>

            <!-- Table with hoverable rows -->
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                  
                    <th scope="col">Location</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                  </tr>
                </thead>

                <tbody>
                  <%  for (let i =0;i<bookings.length;i++){%>
                  <tr>
                    <th scope="row"><%=i+1%></th>
                  
                    <td><%=bookings[i].location  %></td>
                    <td><%= new Date(bookings[i].startTime).toLocaleString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }) %></td>

                    <td><%= new Date(bookings[i].endTime).toLocaleString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }) %></td>

                  </tr>
                  <% } %>

                </tbody>
              </table>
              <!-- End Table with hoverable rows -->

          </div>
        </div>



      </div>
    </div>

    </div>
    </div>
  </section>

</main>





<%-include("../partials/footer.ejs") %>